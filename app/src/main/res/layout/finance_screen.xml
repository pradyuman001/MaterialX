<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.Dashboard.Finance_Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/poppins"
                android:text="Weâ€™ve found that telling stories delivers particularly brilliant results for finance brands. Combining crucial strategic."
                android:textAlignment="textStart"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\n\n\n\n\n\n   Transactions"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/r2_btn"
                    android:layout_width="130dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/r2_btn"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/transfer" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="8dp"
                    android:layout_marginStart="0dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="@android:color/white">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\n\n\n\n\n\n   Bills"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/r2_btn"
                        android:layout_width="130dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:id="@+id/r2_btn"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bill" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_marginStart="0dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\n\n\n\n\n\n   Invoices"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/r2_btn"
                    android:layout_width="130dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/r2_btn"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/invoice" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\n\n\n\n\n\n   Support
"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/r2_btn"
                        android:layout_width="130dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:id="@+id/r2_btn"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/comment" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>